
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h1 style="margin-left:40%;margin-top:%25">Giriş Ekranı </h1>
<div class="clear-loading spinner">
    <span></span>
</div>
<div class="card" style="margin-left:40%;margin-top:5%;width:25%" >
 
    <form action="Verify" method="post" >
        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> Kullanıcı Adı </label>
            <input type="text" name="Name" class="form-control" placeholder="Kullanıcı Adı" aria-label="Recipient's username" aria-describedby="basic-addon2">
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Şifre </label>
            <input type="password" name="Password" class="form-control" placeholder="Şifre" aria-label="Recipient's username" aria-describedby="basic-addon2" id="myInput" > <div class="agile_label">
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Şifreyi Göster</label>
            </div>
            
        </div>
        
        <script>
				function myFunction() {
					var x = document.getElementById("myInput");
					if (x.type === "password") {
						x.type = "text";
					} else {
						x.type = "password";
					}
				}
        </script>
     
        <input type="submit" value="Giriş Yap" class="btn btn-outline-primary">
    </form>
</div>
